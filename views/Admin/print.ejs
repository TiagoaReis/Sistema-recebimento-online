              <tr  data-row="<%= JSON.stringify(row) %>" >
                <td><%= row.cod_barra%></td>
                <td><%= ("0" + row.dt_pagto.getDate()).slice(-2) %> / <%= ("0"+(row.dt_pagto.getMonth()+1)).slice(-2) %> / <%= row.dt_pagto.getFullYear()%></td>
